@using StudioExam.ViewModels.PositionViewModels
@model List<PositionGetVM>
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var position in Model)
                {
                   <tr>
                        <th scope="row">@position.Id</th>
                        <td>@position.Name</td>
                       <td>
                            <a asp-action="Update" asp-route-id="@position.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delet" asp-route-id="@position.Id" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>