@model List<EmployeeGetVM>
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Image</th>
                    <th scope="col">Position Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model){
                <tr>
                    <th scope="row">@employee.Id</th>
                    <td>@employee.FullName</td>
                     <th scope="row">
                         <img  src="~/assets/images/@employee.ImagePath"/>
                         </th>
                    <td>@employee.PositionName</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delet" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                    </td>
                    
                </tr>
                }
               
            </tbody>
        </table>

    </div>
</div>